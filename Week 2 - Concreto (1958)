function setup() {
  createCanvas(700,500)
  background(0);
}

function draw() {
  beginShape()      //square 1
  fill(255)
  quad(0,250,225,0,450,250,225,500)
  fill(255,0,0)
  strokeWeight(0)
  quad(450,250,397,190,340,250,397,310)
  endShape()
  
  
  beginShape()    //square 2
  fill(255)
  quad(600,0,700,100,600,200,500,100)
  fill(0,255,0)
  strokeWeight(0)
  quad(600,200,550,150,600,100,650,150)
  endShape()
  
}
